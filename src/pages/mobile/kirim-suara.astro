---
import Layout from '../../layouts/Layout.astro';
import Form from '../../layouts/Form.astro';
import Icons from '../../components/Icons.astro';
import Wyswyg from '../../components/Wyswyg.astro';



---

<Layout title="Kirim Suara Konsumen">
    <Form title="Kirim Suara Konsumen" action="/mobile/terms_conditions/">
        <div slot="form">
            <div class="mb-6">
                <label for="judul" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Judul</label>
                <input type="text" id="judul" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Tulis judul" required />
            </div>
            <div class="mb-6">
                <label for="short_desc" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Deskripsi Singkat</label>
                <textarea id="short_desc" rows="4" class="block resize-none p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-sk-500 focus:border-sk-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-sk-500 dark:focus:border-sk-500" placeholder="Tulis deskripsi singkat"></textarea>
            </div>
            <div class="mb-6 flex gap-4"> 
                <div class="w-4/12 bg-gray-300 rounded-lg min-h-32 relative">
                    <div class="absolute w-full h-full flex items-center justify-center"><Icons name="image" IconStyle="w-10 h-10 fill-white ml-2" Box="0 0 46 33"/></div>
                    <div id="preview" class="flex gap-4 flex-wrap ratio-video"></div>
                </div>     
                <div class="w-8/12">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="file_input">Upload Cover</label>
                    <input class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" id="file_input" type="file" onchange="handleFileSelect(event)">    
                </div>         
            </div>
            <div class="mb-6">
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="desc">Deskripsi</label>
                <Wyswyg />
            </div>
            <div class="border-t border-gray-200 py-6">
                <button type="submit" class="w-full px-5 py-3 mb-3 text-base font-medium text-center inline-flex items-center justify-center text-white bg-sk-700 rounded-lg hover:bg-sk-800 focus:ring-4 focus:outline-none focus:ring-sk-300 dark:bg-sk-600 dark:hover:bg-sk-700 dark:focus:ring-sk-800">
                    Kirim
                    <Icons name="arrow-right" IconStyle="w-3 h-3 fill-white ml-2" Box="0 0 14 14"/>
                </button>
                <button type="submit" class="w-full px-5 py-3 text-base font-medium text-center inline-flex items-center justify-center text-gray-800 bg-gray-200 rounded-lg hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-sk-300 dark:bg-sk-600 dark:hover:bg-sk-700 dark:focus:ring-sk-800">
                    <Icons name="folder" IconStyle="w-4 h-4 fill-gray-800 mr-2" Box="0 0 20 21"/>
                    Simpan ke Draf
                </button>
            </div>
        </div>
    </Form>
    <script is:inline src="/scripts/uploadFiles.js"></script>
</Layout>
