---
import Layout from '../../layouts/Layout.astro';
import Form from '../../layouts/Form.astro';
import Icons from '../../components/Icons.astro';


---

<Layout title="Verifikasi Akun">
    <Form title="Verifikasi Akun" action="">
        <div slot="form">
            <div class="mb-6">
                <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">No. KTP</label>
                <input type="number" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Input No. KTP" required />
            </div>
            <div class="mb-6">               
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="file_input">Upload KTP</label>
                <input class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" id="file_input" type="file" onchange="handleFileSelect(event)">
            </div>
            <div class="mb-6">
                <div id="preview" class="mt-4 flex gap-4 flex-wrap"></div>
            </div>
            
            <div class="border-t border-gray-200 py-6">
                <a href="/mobile/verifikasi_akun_success/" type="submit" class="w-full px-5 py-3 text-base font-medium text-center inline-flex items-center justify-center text-white bg-sk-700 rounded-lg hover:bg-sk-800 focus:ring-4 focus:outline-none focus:ring-sk-300 dark:bg-sk-600 dark:hover:bg-sk-700 dark:focus:ring-sk-800">
                    Lanjut
                    <Icons name="arrow-right" IconStyle="w-3 h-3 fill-white ml-2" Box="0 0 14 14"/>
                </a>
            </div>
        </div>
    </Form>
</Layout>
<script is:inline src="/scripts/uploadFiles.js"></script>

