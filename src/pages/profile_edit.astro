---
import Layout from '../layouts/Layout.astro';
import DashboardLayout from '../layouts/DashboardLayout.astro';
import Header from '../components/Header.astro';
import Icons from '../components/Icons.astro';



---

<Layout title="Dashboard">
    <Header />
    <DashboardLayout title="Profile" currentPage="profile">
        <div slot="right">
            <form action="/profile_edit/" class="mt-6">
                <div class="mb-6 flex gap-4 items-center"> 
                    <div class="w-2/12 relative">
                        <div class="w-32 h-32 bg-gray-300 rounded-full relative overflow-hidden">
                            <div class="absolute w-full h-full flex items-center justify-center"><Icons name="image" IconStyle="w-10 h-10 fill-white ml-2" Box="0 0 46 33"/></div>
                            <div id="preview" class="flex gap-4 flex-wrap"></div>
                        </div>
                    </div>     
                    <div class="w-10/12">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="file_input">Upload Foto</label>
                        <input class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" id="file_input" type="file" onchange="handleFileSelect(event)">    
                    </div>         
                </div>
                <div class="mb-6">
                    <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                    <input type="email" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="name@gmail.com" required />
                </div>
                <div class="mb-6">
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nama Lengkap</label>
                    <input type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Isi nama lengkap" required />
                </div>
                <div class="mb-6">
                    <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                    <div class="relative">
                        <input type="password" id="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-sk-500 dark:focus:border-sk-500" placeholder="•••••••••" required />
                        <button type="button" class="absolute inset-y-0 end-0 flex items-center pe-3 text-xs text-gray-500" id="toggle-password">
                            Show
                        </button>
                    </div>
                </div> 
                <div class="mb-6">
                    <label for="toggle-confirm-password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Konfirmasi Password</label>
                    <div class="relative">
                        <input type="password" id="confirm-password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-sk-500 dark:focus:border-sk-500" placeholder="•••••••••" required />
                        <button type="button" class="absolute inset-y-0 end-0 flex items-center pe-3 text-xs text-gray-500" id="toggle-confirm-password">
                            Show
                        </button>
                    </div>  
                </div> 
                <div class="mb-6">
                    <label for="telp" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">No. Telp</label>
                    <input type="text" id="telp" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Isi nama lengkap" required />
                </div>
                <div class="mb-6">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tipe Akun</label>
                    <div class="flex gap-6">
                        <div class="w-full flex items-center ps-4 border border-gray-200 rounded dark:border-gray-700">
                            <input checked id="bordered-radio-1" type="radio" value="" name="bordered-radio" class="w-4 h-4 text-sk-600 bg-gray-100 border-gray-300 focus:ring-sk-500 dark:focus:ring-sk-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" onclick="toggleInput(false)" >
                            <label for="bordered-radio-1" class="w-full py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Personal</label>
                        </div>
                        <div class="w-full flex items-center ps-4 border border-gray-200 rounded dark:border-gray-700">
                            <input id="bordered-radio-2" type="radio" value="" name="bordered-radio" class="w-4 h-4 text-sk-600 bg-gray-100 border-gray-300 focus:ring-sk-500 dark:focus:ring-sk-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" onclick="toggleInput(true)">
                            <label for="bordered-radio-2" class="w-full py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Perusahaan</label>
                        </div>
                    </div>
                </div>
                <!-- Input Field -->
                <div class="hidden" id="showHideField">
                    <div class="mb-6">
                        <label for="company" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nama Perusahaan</label>
                        <input type="text" id="company" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-sk-500 focus:border-sk-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Isi nama perusahaan" />
                    </div>
                </div>
                <div class="mb-6">
                    <label for="address" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Alamat Lengkap</label>
                    <textarea id="address" rows="4" class="block resize-none p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-sk-500 focus:border-sk-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-sk-500 dark:focus:border-sk-500" placeholder="Write your thoughts here..."></textarea>
                </div>
                <div class="border-t border-gray-200 py-6 flex gap-4">
                    <button type="submit" class="px-5 py-3 text-base font-medium text-center inline-flex items-center text-white bg-sk-700 rounded-lg hover:bg-sk-800 focus:ring-4 focus:outline-none focus:ring-sk-300 dark:bg-sk-600 dark:hover:bg-sk-700 dark:focus:ring-sk-800">
                        Simpan
                        <Icons name="arrow-right" IconStyle="w-3 h-3 fill-white ml-2" Box="0 0 14 14"/>
                    </button>
                    <button type="submit" class="px-5 py-3 text-base font-medium border border-gray-200 text-center inline-flex items-center text-gray-800 bg-white-200 rounded-lg hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-sk-300 dark:bg-sk-600 dark:hover:bg-sk-700 dark:focus:ring-sk-800">
                        Kembali
                    </button>
                </div>
            </form>
        </div>
    </DashboardLayout>
    <script is:inline src="/scripts/showHideForm.js"></script>
    <script is:inline src="/scripts/showHidePassword.js"></script>
    <script is:inline src="/scripts/uploadFiles.js"></script>
</Layout>
