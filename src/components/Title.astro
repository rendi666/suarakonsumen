---
import Icons from '../components/Icons.astro';

const { title, style, marginTop} = Astro.props;
---

<div class={`flex items-center w-full mb-4 ${marginTop}`}>
    <div class="w-6/12">
        <h2 class="text-lg font-semibold">{title}</h2>
    </div>
    {style === 'button' && (
    <div class="w-6/12 flex justify-end">
        <button type="button" class="px-3 py-2 gap-2 text-xs font-medium text-center inline-flex items-center text-gray-800 bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-sk-900 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
            Lihat Semua
            <Icons name="arrow-right" IconStyle="w-3 h-3 text-black" Box="0 0 16 16" />
        </button>
    </div>
    )}
    {style === 'carousel' && (
    <div class="w-6/12 flex justify-end gap-2">
        <div class="carousel-button-prev rounded-full bg-gray-100 p-0.5">
            <Icons name="chevron-left" IconStyle="w-6 h-6 fill-gray-800" Box="0 0 18 19" />
        </div>
        <div class="carousel-button-next rounded-full bg-gray-100 p-0.5">
            <Icons name="chevron-right" IconStyle="w-6 h-6 fill-gray-800" Box="0 0 18 19" />
        </div>
    </div>
    )}
</div>
