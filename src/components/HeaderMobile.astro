
---
import Icons from './Icons.astro';
import Popup from './Popup.astro';
import MenuMobile from './MenuMobile.astro';

---
<nav class="bg-white border-gray-200 dark:bg-gray-900 sticky top-0 z-[40] border-b border-gray-100">
    <div class="flex flex-wrap justify-between items-center mx-auto py-4 px-4">
        <a href="/mobile/" class="flex w-6/12 items-center space-x-1 rtl:space-x-reverse">
            <img src="/asset/images/logo.png" class="h-12" alt="Suara Konsumen Logo" />
        </a>
        <div class="w-6/12 flex justify-end gap-3">
            <div class="flex items-center">
                <form class="w-full mx-auto">
                    <div class="flex">
                        <div class="relative w-full">
                            <button type="button" data-modal-target="search-popup" data-modal-toggle="search-popup" class="relative inline-flex items-center justify-center w-8 h-8 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600"}>
                                <Icons name="search" IconStyle="w-4 h-4 fill-grey-600" Box="0 0 20 20"/>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="flex items-center gap-3" id="login-container"></div>
            <div id="dropdownInformation" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 dark:divide-gray-600">
                <div class="px-4 py-3 text-sm text-gray-900 dark:text-white">
                    <div>Hi, Andi Julianto</div>
                    </div>
                    <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownInformationButton">
                        <li>
                            <a href="/mobile/dashboard/" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Dashboard</a>
                        </li>
                        <li>
                            <a href="/mobile/profile/" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Profile</a>
                        </li>
                        <li>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Pengaturan</a>
                        </li>
                    </ul>
                    <div class="py-2">
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white" id="clear-storage">Log out</a>
                </div>
            </div>
        </div>
    </div>
</nav>
<nav class="bg-gray-50 dark:bg-gray-700 mt-[-1px]">
    <div class="mx-auto">
        <MenuMobile />
    </div>
</nav>

<Popup page="login-popup" form="login-mobile" title="Login" size="max-w-lg" />
<Popup page="search-popup" form="search" title="Search" size="max-w-lg" />

<script is:inline src="/scripts/loginSimulationMobile.js"></script>
  

