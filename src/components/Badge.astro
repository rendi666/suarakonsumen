---
import Icons from './Icons.astro';

const { category, status_input } = Astro.props;


---
{category === 'Suara Konsumen' && (
    <span class="bg-sk-100 text-sk-900 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
        {category}
    </span>
)}
{category === 'Review' && (
<span class="bg-yellow-100 text-yellow-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Tanggapan' && (
<span class="bg-green-100 text-green-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Tips' && (
<span class="bg-purple-100 text-purple-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Press Release' && (
<span class="bg-blue-100 text-blue-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Berita' && (
<span class="bg-gray-100 text-gray-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}


{status_input === 'Tayang' && (
<span class="bg-green-100 text-green-800 ml-4 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    <Icons name="check" IconStyle="w-4 h-4 fill-green-800 mr-2 inline-block align-middle" Box="0 0 24 24"/>
    {status_input}
</span>
)}
{status_input === 'Moderasi' && (
<span class="bg-yellow-100 text-yellow-800 ml-4 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    <Icons name="waiting" IconStyle="w-4 h-4 fill-yellow-800 mr-2 inline-block align-top" Box="0 0 24 24"/>
    {status_input}
</span>
)}
{status_input === 'Draft' && (
<span class="bg-gray-100 text-gray-800 ml-4 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    <Icons name="folder" IconStyle="w-4 h-4 fill-yellow-800 mr-2 inline-block align-top" Box="0 0 24 24"/>
    {status_input}
</span>
)}
{status_input === 'Ditolak' && (
<span class="bg-red-100 text-red-800 ml-4 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    <Icons name="close-circle" IconStyle="w-4 h-4 fill-yellow-800 mr-2 inline-block align-top" Box="0 0 24 24"/>
    {status_input}
</span>
)}


    
