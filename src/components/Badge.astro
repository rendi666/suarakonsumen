---
const { category } = Astro.props;


---
{category === 'Suara Konsumen' && (
    <span class="bg-sk-100 text-sk-900 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
        {category}
    </span>
)}
{category === 'Review' && (
<span class="bg-yellow-100 text-yellow-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Tanggapan' && (
<span class="bg-green-100 text-green-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Tips' && (
<span class="bg-purple-100 text-purple-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Press Release' && (
<span class="bg-blue-100 text-blue-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}
{category === 'Berita' && (
<span class="bg-gray-100 text-gray-800 text-xs font-medium inline-block px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 mb-1 uppercase">
    {category}
</span>
)}

    
